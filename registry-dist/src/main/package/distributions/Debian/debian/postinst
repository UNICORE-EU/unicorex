#!/bin/sh
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	# Config files
	chown -R unicore:unicore /etc/unicore/registry/
	chmod 750 /etc/unicore/registry/	
	chmod 644 /etc/unicore/registry/*

	chmod 750 /etc/unicore/registry/xacml2Policies
	chmod 644 /etc/unicore/registry/xacml2Policies/*

	chown unicore:unicore /usr/sbin/unicore-registry-*.sh
	chmod 744 /usr/sbin/unicore-registry-*.sh
	
	chown unicore:unicore /usr/share/unicore/registry/lib
	chmod 755 /usr/share/unicore/registry/lib
	chmod 644 /usr/share/unicore/registry/lib/*.jar

	chown unicore:unicore /var/log/unicore
	chmod 755 /var/log/unicore
	chown unicore:unicore /var/log/unicore/registry
	chmod 755 /var/log/unicore/registry
	
	;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
