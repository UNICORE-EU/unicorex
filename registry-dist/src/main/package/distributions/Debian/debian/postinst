#!/bin/sh
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	# Config files
	chown unicore:unicore /etc/unicore/registry/
	chmod 750 /etc/unicore/registry/
	
	chown unicore:unicore /etc/unicore/registry/logging.properties
	chmod 644 /etc/unicore/registry/logging.properties
	
	chown unicore:unicore  /etc/unicore/registry/simpleuudb
	chmod 644 /etc/unicore/registry/simpleuudb

	chown unicore:unicore /etc/unicore/registry/uas.config
	chmod 600 /etc/unicore/registry/uas.config
	
	chown unicore:unicore /etc/unicore/registry/xacml2.config
	chmod 644 /etc/unicore/registry/xacml2.config
		
	chown unicore:unicore /etc/unicore/registry/xacml2Policies
	chmod 750 /etc/unicore/registry/xacml2Policies
	
	chown unicore:unicore /etc/unicore/registry/xacml2Policies/01registryServices.xml
	chmod 644 /etc/unicore/registry/xacml2Policies/01registryServices.xml

	chown unicore:unicore /etc/unicore/registry/xacml2Policies/02restServices.xml
	chmod 644 /etc/unicore/registry/xacml2Policies/02restServices.xml

	chown unicore:unicore /etc/unicore/registry/xacml2Policies/99finalDeny.xml
	chmod 644 /etc/unicore/registry/xacml2Policies/99finalDeny.xml

	chown unicore:unicore /usr/sbin/unicore-registry-start.sh
	chmod 744 /usr/sbin/unicore-registry-start.sh
	
	chown unicore:unicore /usr/sbin/unicore-registry-stop.sh
	chmod 744 /usr/sbin/unicore-registry-stop.sh
	
	chown unicore:unicore /usr/sbin/unicore-registry-status.sh
	chmod 744 /usr/sbin/unicore-registry-status.sh

	# Documentation
	chmod 755 /usr/share/doc/unicore/registry/
	chmod 644 /usr/share/doc/unicore/registry/*
	
	# jar files
	chown unicore:unicore /usr/share/unicore/registry/lib
	chmod 755 /usr/share/unicore/registry/lib
	chmod 644 /usr/share/unicore/registry/lib/*.jar

	# logs
	chown unicore:unicore /var/log/unicore
	chmod 755 /var/log/unicore
	chown unicore:unicore /var/log/unicore/registry
	chmod 755 /var/log/unicore/registry
	
	chown unicore:unicore /var/run/unicore
	chmod 755 /var/run/unicore

	chown unicore:unicore /var/lib/unicore
	chmod 750 /var/lib/unicore
	
	chown unicore:unicore /var/lib/unicore/registry
	chmod 750 /var/lib/unicore/registry

	;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
