#!/bin/sh
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	# Config files
	chown -R unicore:unicore /etc/unicore/unicorex/
	chmod 755 /etc/unicore/unicorex/
	chmod 644 /etc/unicore/unicorex/*
	chmod 755 /etc/unicore/unicorex/xacml2Policies
	chmod 644 /etc/unicore/unicorex/xacml2Policies/*.xml

	chown unicore:unicore /usr/sbin/unicore-unicorex-*.sh
	chmod 744 /usr/sbin/unicore-unicorex-*.sh

	chmod 755 /usr/share/unicore/unicorex/lib
	chmod 644 /usr/share/unicore/unicorex/lib/*.jar

	chown unicore:unicore /var/log/unicore
	chmod 755 /var/log/unicore
	
	chown unicore:unicore /var/log/unicore/unicorex
	chmod 755 /var/log/unicore/unicorex
	
	;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
