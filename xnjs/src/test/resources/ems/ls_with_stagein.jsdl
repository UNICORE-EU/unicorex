<?xml version="1.0"?>
    <jsdl:JobDefinition xmlns:jsdl="http://schemas.ggf.org/jsdl/2005/11/jsdl" xmlns:jsdl-posix="http://schemas.ggf.org/jsdl/2005/11/jsdl-posix">
      <jsdl:JobDescription>
         <jsdl:DataStaging>
         <jsdl:FileName>infile.txt</jsdl:FileName>
         <jsdl:Source>
          <jsdl:URI>file:///etc/hosts</jsdl:URI>
         </jsdl:Source>
       </jsdl:DataStaging>
        <jsdl:Application>
           <jsdl-posix:POSIXApplication>
  		     <jsdl-posix:Executable>/bin/ls</jsdl-posix:Executable>
  		     <jsdl-posix:Argument>-l</jsdl-posix:Argument>
	       </jsdl-posix:POSIXApplication>
        </jsdl:Application>
      </jsdl:JobDescription>
    </jsdl:JobDefinition>
